{% set classes = [
  'table',
  dark ? 'table-dark' : 'table-light',
  striped ? 'table-striped',
  bordered ? 'table-bordered',
  hoverable ? 'table-hover',
]|join(' ') %}

{% if caption %}
  {% set tableHTML = tableHTML | replace({ '<table>': "<table>\n <caption>#{caption}</caption>" }) %} {# Inject our caption #}
{% endif %}

{% set tableHTML = tableHTML | replace({ '<table': "<table class=\"#{classes}\"" }) %} {# Inject our classes #}
{{ tableHTML | raw }}
