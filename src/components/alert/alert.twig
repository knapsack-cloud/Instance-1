{% set classes = [
  'alert',
  type ? "alert-#{type}",
  isDismissible ? 'alert-dismissible'
] | merge(classes|default([])) %}

<div class="{{ classes|join(' ') }}" role="alert">
  {{ message }}
  {% if isDismissible %}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  {% endif %}
</div>
